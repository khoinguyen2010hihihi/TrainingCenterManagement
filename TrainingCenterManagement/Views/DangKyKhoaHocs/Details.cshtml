@model TrainingCenterManagement.Models.DangKyKhoaHoc

@{
    ViewBag.Title = "Chi tiết Đăng ký Khóa học";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Chi tiết Đăng ký Khóa học</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Thông tin Đăng ký Khóa học</h4>
            <hr />

            <div class="row">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.HocVien.HoTen)</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.HocVien.HoTen)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.KhoaHoc.TenKhoaHoc)</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.KhoaHoc.TenKhoaHoc)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <strong>@Html.DisplayNameFor(model => model.NgayDangKy)</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.NgayDangKy)
                </div>
            </div>

            <hr />
            <div class="text-center">
                <p>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaDangKy }, new { @class = "btn btn-warning btn-sm" })
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">Quay lại danh sách</a>
                </p>
            </div>
        </div>
    </div>
</div>
