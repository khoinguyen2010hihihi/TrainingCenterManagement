@model TrainingCenterManagement.Models.HocVien

@{
    ViewBag.Title = "Edit";
}

<style>
    .edit-form-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

        .edit-form-container h2 {
            text-align: center;
            font-size: 2rem;
            color: #4e73df;
            margin-bottom: 30px;
        }

        .edit-form-container .form-group {
            margin-bottom: 20px;
        }

        .edit-form-container label {
            font-weight: bold;
            color: #333;
            font-size: 1rem;
        }

        .edit-form-container .form-control {
            border-radius: 8px;
            font-size: 1rem;
            padding: 12px;
            border: 1px solid #ddd;
            width: 100%;
            box-sizing: border-box;
        }

        .edit-form-container .btn-primary {
            background-color: #4e73df;
            color: white;
            font-size: 1.2rem;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s;
        }

            .edit-form-container .btn-primary:hover {
                background-color: #2e59d9;
            }

        .edit-form-container .text-danger {
            font-size: 0.9rem;
            color: #e74a3b;
        }

        .edit-form-container .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            font-size: 1rem;
            color: #4e73df;
            font-weight: bold;
        }

            .edit-form-container .back-link:hover {
                text-decoration: underline;
            }
</style>

<div class="edit-form-container">
    <h2>✏️ Sửa thông tin học viên</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.MaHocVien)

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen)
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgaySinh)
            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoDienThoai)
            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan)
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau)
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    }

    <div class="back-link">
        @Html.ActionLink("Quay lại danh sách", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
