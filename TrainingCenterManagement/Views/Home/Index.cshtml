@{
    ViewBag.Title = "Trang chủ";
}

<style>
    .dashboard-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .dashboard-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
    }

    .dashboard-box {
        background-color: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        transition: box-shadow 0.3s ease;
        width: 48%;
        text-align: center;
    }

        .dashboard-box:hover {
            box-shadow: 0 6px 24px rgba(0,0,0,0.15);
        }

    .dashboard-title {
        font-weight: bold;
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .btn-lg {
        min-width: 240px;
        font-size: 1.1rem;
        padding: 12px 18px;
        border-radius: 10px;
    }

    .section-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .alert-warning {
        margin-top: 30px;
        font-size: 1rem;
    }
</style>

<div class="container mt-5 dashboard-container">

    <div class="text-center mb-5">
        <h2 class="dashboard-title">🎓 Hệ thống quản lý trung tâm đào tạo</h2>
        <p class="text-muted">Chào mừng đến với hệ thống quản lý khoá học và học viên</p>
    </div>

    @if (Session["VaiTro"]?.ToString() == "Admin")
    {
        <div class="dashboard-row">
            <div class="dashboard-box">
                <h4 class="section-title text-success">Chào mừng Quản trị viên!</h4>

                <div class="d-flex flex-column gap-3">
                    <a href="@Url.Action("Index", "KhoaHocs")" class="btn btn-success btn-lg">📚 Quản lý khóa học</a>
                    <a href="@Url.Action("Index", "HocViens")" class="btn btn-info btn-lg">👨‍🎓 Quản lý học viên</a>
                    <a href="@Url.Action("Index", "DangKyKhoaHocs")" class="btn btn-warning btn-lg">📝 Quản lý đăng ký</a>
                </div>
            </div>

            <div class="dashboard-box">
                <h4 class="section-title text-dark">Thống kê</h4>

                <div class="d-flex flex-column gap-3">
                    <a href="@Url.Action("Index", "ThongKe")" class="btn btn-dark btn-lg">📈 Thống kê học viên</a>
                    <a href="@Url.Action("DoanhThu", "ThongKe")" class="btn btn-danger btn-lg">💰 Thống kê doanh thu</a>
                    <a href="@Url.Action("DoanhThuTheoThoiGian", "ThongKe")" class="btn btn-outline-dark btn-lg">📆 Doanh thu theo thời gian</a>
                </div>
            </div>
        </div>
    }
    else if (Session["VaiTro"]?.ToString() == "HocVien")
    {
        <div class="dashboard-row" style="justify-content: center;">
            <div class="dashboard-box">
                <h4 class="section-title text-primary">Xin chào học viên @Session["HoTen"]!</h4>

                <div class="d-flex flex-column gap-3">
                    <a href="@Url.Action("Index", "DangKyKhoaHocs")" class="btn btn-warning btn-lg">📝 Quản lý đăng ký</a>
                    <a href="@Url.Action("Index", "ThongKe")" class="btn btn-dark btn-lg">📈 Thống kê học viên</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            ⚠️ Bạn chưa đăng nhập. Vui lòng
            <a href="@Url.Action("DangNhap", "TaiKhoan")">đăng nhập</a> để sử dụng hệ thống.
        </div>
    }

</div>
