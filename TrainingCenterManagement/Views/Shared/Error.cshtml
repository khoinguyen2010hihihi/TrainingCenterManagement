@{
    ViewBag.Title = "Lỗi";
}

<div class="alert alert-danger text-center">
    <h4>@ViewBag.Message</h4>

    @if (ViewBag.RedirectTo == "HocViens")
    {
        <p><a href="@Url.Action("Index", "HocViens")" class="btn btn-primary">Quay lại danh sách học viên</a></p>
    }
    else if (ViewBag.RedirectTo == "KhoaHocs")
    {
        <p><a href="@Url.Action("Index", "KhoaHocs")" class="btn btn-primary">Quay lại danh sách khóa học</a></p>
    }
</div>
