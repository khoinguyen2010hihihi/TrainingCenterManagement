@model IEnumerable<TrainingCenterManagement.ViewModels.ThongKeDoanhThuViewModel>

@{
    ViewBag.Title = "📊 Thống kê doanh thu";
}

<h2 class="text-center mb-4">💰 Thống kê doanh thu theo khóa học</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Tên khóa học</th>
            <th>Học phí</th>
            <th class="text-center">Số HV</th>
            <th class="text-end">Doanh thu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenKhoaHoc</td>
                <td>@String.Format("{0:N0} VNĐ", item.HocPhi)</td>
                <td class="text-center">@item.SoLuongDangKy</td>
                <td class="text-end">@String.Format("{0:N0} VNĐ", item.DoanhThu)</td>
            </tr>
        }
    </tbody>
</table>
